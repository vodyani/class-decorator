{
  "name": "@vodyani/class-decorator",
  "license": "MIT",
  "version": "8.2.3",
  "author": "ChoGathK",
  "description": "üè≠ class-decorator is an easy-to-use toolbox that provides class validation, conversion, and property binding functions",
  "homepage": "https://github.com/vodyani/class-decorator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/class-decorator.git"
  },
  "bugs": {
    "url": "https://github.com/vodyani/class-decorator/issues"
  },
  "keywords": [
    "vodyani",
    "decorator",
    "class",
    "transformer",
    "validator",
    "autobind-decorator"
  ],
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "local": "npm i && npm i @vodyani/eslint-config -D && npx husky install",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:html-report": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:json-report": "eslint ./src ./test -f json -o eslint-report.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@vodyani"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/test/.spec.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/(?!(lodash-es|other-es-lib))"
    ]
  },
  "dependencies": {
    "@vodyani/utils": "^8.8.1",
    "autobind-decorator": "2.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "lodash": "4.17.21",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/testing": "8.4.7",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.56",
    "@types/supertest": "2.0.12",
    "@vodyani/eslint-config": "^1.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "supertest": "6.2.4",
    "ts-jest": "27.1.5",
    "typescript": "4.8.2"
  }
}
